@model Vidly.Models.Customer
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<table class="table table-movie table-hover">
    <thead></thead>
    <tbody>
        <tr>
            <td>Birthdate:</td>
            <td>@Model.Birthdate.Value.ToShortDateString()</td>
        </tr>
        <tr>
            <td>Newsletter subscription:</td>
            <td>
                @if (Model.IsSubscribedToNewsletter)
                {
                    <span>Yes</span>
                }
                else
                {
                    <span>No</span>
                }
            </td>
        </tr>
        <tr>
            <td>Membership Type:</td>
            <td>@Model.MembershipType.Name</td>
        </tr>
        <tr>
            <td>Delinquent</td>
            <td>
                @if (Model.Delinquent)
                {
                    <span>Yes</span>
                }
                else
                {
                    <span>No</span>
                }
            </td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("EDIT CUSTOMER", "Edit", "Customers", new { id = Model.Id }, new { @class = "btn btn-primary" })